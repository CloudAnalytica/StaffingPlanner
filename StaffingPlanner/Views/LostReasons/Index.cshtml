@model IEnumerable<StaffingPlanner.Models.LostReason>

@{
    ViewBag.Title = "Lost Reason List";
                      <div class="container">
                          <h2>Lost Reason List</h2>
                          <div class="table-responsive">
                              <p>
                                  @Html.ActionLink("Create New", "Create")
                              </p>
                              <table class="table table-condensed table-bordered">
                                  <tr id="t">
                                      <th>
                                          @Html.DisplayNameFor(model => model.reason)
                                      </th>
                                      <th></th>
                                  </tr>

                                  @foreach (var item in Model) {
                                  <tr>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.reason)
                                      </td>
                                      <td>
                                          @Html.ActionLink("Edit", "Edit", new { id=item.lostReasonId }) |
                                          @Html.ActionLink("Details", "Details", new { id=item.lostReasonId }) |
                                          @Html.ActionLink("Delete", "Delete", new { id=item.lostReasonId })
                                      </td>
                                  </tr>
                                  }

                              </table>
                          </div>
                      </div>
