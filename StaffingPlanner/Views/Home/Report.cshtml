

@model IEnumerable<StaffingPlanner.Models.Project>





@{
    ViewBag.Title = "Reports";
}

<h2>Report</h2>
<div class="table-responsive">

    <table class="table table-condensed table-bordered">
        <tr id="t">
            <th>Details</th>
            <th>Account</th>
            <th>Sub-Business</th>
            <th>Project Name</th>
            <th>Sponsor Name</th>
            <th>Project Value</th>
            <th>Opportunity Type</th>
            <th>Opportunity Status</th>
            <th>Rate Card/hr</th>
        </tr>

        @foreach (var item in Model)
        {
        <tr id="t2">
            <td>

                <button type='button' class='btn btn-light' data-toggle='modal' data-target="#@item.projectId">
                    <i class="fas fa-user-plus"></i>
                </button>

                <!-- Modal -->
                <div class="modal fade" id="@item.projectId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h3 class="modal-title text-center text-uppercase text-danger" id="exampleModalLabel">@item.projectName</h3>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body text-primary">
                                <p>Project Name = @item.projectName</p>
                                <p>Skill Set Needed = </p>
                                <p> # of Positions</p>
                                <p>Practice = </p>
                                <p>Max Target Grade = </p>
                                <p>Targeted Consultant = </p>
                                <p>Work Location = @item.location</p>
                                <p>Start Date = </p>
                                <p>Duration = </p>
                                <p>Priority = </p>
                                <p>Comment = @item.comment</p>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </td>                 <!--Details-->
            <td>To be Filled</td> <!--Account-->
            <td>To be Filled</td> <!--Sub-business-->
            <td>@item.projectName</td> <!--Project Name-->
            <td>#</td>          <!-- # of positions-->
            <td>@item.sponsor</td><!--Sponsor Name-->
            <td>To be Filled</td> <!--Project Value-->
            <td>To be Filled</td> <!--Opportunity Type-->
            <td>@item.ProjectStatus.projectStatusName</td> <!--Opportunity Status-->
            <td>To be Filled</td> <!--Rate Card/hr-->
        </tr>



        }
        
    </table>






</div> <!-- Table Responsive -->
